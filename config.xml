<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "org.cahsoft.asteroidsattack"
        versionCode = "10"
        version     = "1.1.0">
 
    <name>Asteroids Attack</name>
 
    <description>
        Asteroids Attack is a simple but fun shooting game that everyone will enjoy playing.
    </description>
 
    <author href="http://coenraets.org" email="corwin_hope@yahoo.com">
        Corwin A. Hope
    </author>
 
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>

    <!--
      This allows your app to load assets from all *.phongap.com domains
    -->
    <!--access origin="https://game-service.herokuapp.com" subdomains="true" /-->

    <plugin name="cordova-plugin-whitelist" />

    <!--gap:plugin name="admob" version="5.4.2" source="npm"/-->
    <preference name="android-build-tool" value="gradle" /> 
    <gap:plugin name="cordova-plugin-admobpro" source="npm" />
    
    <access origin="*" />
    <access origin="http://phonegap.com" subdomains="true" />

    
</widget>